<form class="{{cssClass}} flexcol" autocomplete="off">

  <nav class="sheet-navigation tabs" data-group="primary">
    <a class="item active" data-tab="inventory">{{ localize "ffd20lnrw.Inventory" }}</a>
    <a class="item" data-tab="notes">{{ localize "ffd20lnrw.Notes" }}</a>
  </nav>
  
  <section class="primary-body">

    {{!-- Inventory Tab --}}
    <div class="tab inventory flexcol" data-group="primary" data-tab="inventory">
      <header class="sheet-header flexrow">
        <img class="profile" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>
        
        <div class="header-details flexcol">
          <div class="header-top flexrow">
            <h1 class="charname">
              <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "ffd20lnrw.CharacterName"}}"/>
            </h1>
          </div>

          {{!-- Options --}}
          <div class="flexcol">
            <ul class="summary options">
              {{!-- Sell Multiplier --}}
              <li>
                <input type="text" name="flags.ffd20lnrw.sellMultiplier" value="{{sellMultiplier}}" placeholder="{{localize "ffd20lnrw.HelpSellMultiplierN"}}" data-dtype="Number"
                  title="{{localize "ffd20lnrw.HelpSellMultiplier"}}" />
              </li>
            </ul>
          </div>
        </div>
      </header>

      {{> "systems/ffd20lnrw/templates/actors/parts/actor-inventory.hbs" sections=inventory}}
    </div>

    {{!-- Notes Tab --}}
    <div class="tab actor-notes flexcol" data-group="primary" data-tab="notes">
      <div class="primary-content">
        {{roll-editor content=data.details.notes.value target="data.details.notes.value" button=true owner=owner editable=editable}}
      </div>

      {{#if table_magicItems}}
      <div>
        {{{table_magicItems}}}
      </div>
      {{/if}}
    </div>

  </section>
  
</form>
