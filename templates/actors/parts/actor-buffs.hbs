{{!-- Buffs --}}
<div class="flexrow buffs-conditions">
  {{#each conditions}}
  <div class="condition{{#if active}} active{{/if}}{{#if immune}} immune{{/if}}">
    <a class="checkbox" data-condition-id="{{id}}">
      <img src="{{img}}" width="32" height="32">
      <div class="details">
        <span class="name">{{label}}</span>
        {{#if racial}}
        <div class="sources">
          <span class="source">{{racial}}</span>
        </div>
        {{else if inherited}}
        <div class="sources">
          {{#each items}}
          <span class="source">{{name}}</span>
          {{/each}}
        </div>
        {{else if immune}}
        <div class="note">{{localize "FFD20.Immune"}}</div>
        {{/if}}
      </div>
    </a>

    {{#if compendium}}
    <a class="compendium-entry" data-compendium-entry="{{compendium}}">
      <i class="fa-solid fa-book compendium-icon" inert></i>
    </a>
    {{/if}}
  </div>
  {{/each}}
</div>

<hr>

{{> "systems/ffd20/templates/actors/parts/actor-item-nav-filters.hbs" category="buffs" sections=sections}}

<section class="buffs-body">
  <ol class="item-groups-list" data-type="buff">
    {{#each sections as |section sid|}}
    {{#unless section._hidden}}
    <ol class="item-list" data-list="{{id}}" data-type="{{create.type}}" data-subtype="{{create.system.subType}}">
      <li class="item-list-header flexrow buffs-{{id}}">
        <div class="item-name">
          <h3>{{section.label}}</h3>
        </div>

        <div class="item-detail item-duration">
          <span>{{localize "FFD20.Duration"}}</span>
        </div>

        <div class="item-detail item-level">
          <span>{{localize "FFD20.Level"}}</span>
        </div>

        {{#if section.interface.actions}}
        <div class="item-detail item-actions">
          <i class="icon-pf icon-gears" data-tooltip="FFD20.ActionPlural"></i>
        </div>
        {{/if}}

        <div class="item-detail item-uses">
          <i class="icon-pf icon-battery-pack" data-tooltip="FFD20.ChargePlural"></i>
        </div>

        <div class="item-detail item-active">
          <span>{{localize "FFD20.Active"}}</span>
        </div>

        <div class="item-controls">
          {{#if @root.owner}}
          <a class="item-control item-create" data-tooltip="FFD20.CreateItem" data-create="{{path}}">
            <i class="fa-solid fa-plus" inert></i>
          </a>
          <a data-action="browse" data-source="{{path}}" data-tooltip="FFD20.BrowseBuffs"><i class="fa-solid fa-folder-plus" inert></i></a>
          {{/if}}
        </div>
      </li>

      {{#each section.items as |item iid|}}
      <li class="item flexrow" data-item-id="{{item.id}}">
        <div class="item-name rollable">
            <div class="item-image" style='background-image: url("{{item.img}}")' data-tooltip="FFD20.DisplayInChat"></div>
            <h4>{{item.name}}</h4>
        </div>

        <div class="item-detail item-duration">
            <span class="">{{#if item.labels.duration}}{{item.labels.duration}}{{/if}}</span>
        </div>

        <div class="item-detail item-level">
          <span class="text-box allow-relative" data-dtype="Number">{{#if item.level}}{{item.level}}{{/if}}</span>
        </div>

        {{#if section.interface.actions}}
        <div class="item-detail item-actions">
          <div class="item-action">
            {{#if item.hasAction}}
            <a class="item-control item-action action roll" data-tooltip="FFD20.UseBuff">
              <i class="fa-solid fa-dice-d20" inert></i>
            </a>
            {{/if}}
          </div>
        </div>
        {{/if}}

        <div class="item-detail item-uses flexrow" data-tooltip-extended="item.{{item.id}}.resources">
          {{#if item.isCharged}}
          <span class="text-box value allow-relative" data-wheel-step="1" data-dtype="Number">{{item.uses.value}}</span>
            {{#unless item.noMaxCharges}}
            <span class="sep"> / </span>
            <span class="max">{{item.uses.max}}</span>
            {{/unless}}
          {{/if}}
        </div>

        <div class="item-detail item-active">
          <input type="checkbox" {{checked item.active}}>
        </div>

        <div class="item-controls">
          {{#if @root.owner}}
          <a class="item-control item-edit" data-tooltip="FFD20.EditItem"><i class="fa-solid fa-edit" inert></i></a>
          <a class="item-control item-duplicate" data-tooltip="FFD20.DuplicateItem"><i class="fa-solid fa-copy" inert></i></a>
          <a class="item-control item-delete" data-tooltip="FFD20.DeleteItem"><i class="fa-solid fa-trash" inert></i></a>
          {{/if}}
        </div>
      </li>
      {{/each}}
    </ol>
    {{/unless}}
    {{/each}}
  </ol>
</section>
