{{!-- Spellbook Navigation --}}
<nav class="sheet-navigation tabs spellbooks" data-group="spellbooks">
  {{#each system.attributes.spells.spellbooks as |spellbook a|}}
  {{#if spellbook.inUse}}
  <a class="item title-case" data-tab="{{a}}" data-group="spellbooks">{{localize spellbook.label}}</a>
  {{/if}}
  {{/each}}
</nav>

<section class="spellbooks-body">
  {{#each spellbookData as |spellbook a|}}
  {{#if spellbook.orig.inUse}}
  <div class="tab spellbook-group flexcol" data-group="spellbooks" data-tab="{{a}}">
  {{~> "systems/ffd20/templates/actors/parts/actor-spellbook.hbs" spellbook=spellbook spellbookIndex=a
    data=../data owner=../owner filters=../filters.spellbook isCharacter=../isCharacter
    spellFailure=../spellFailure hiddenElems=../hiddenElems sourceDetails=../sourceDetails}}
  </div>
  {{/if}}
  {{/each}}
</section>