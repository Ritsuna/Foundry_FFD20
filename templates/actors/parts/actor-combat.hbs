<header>
  {{! BAB }}
  <div class="info-box attribute bab" data-attribute="bab" data-tooltip-extended="bab">
    <h5><a class="rollable"><span>{{localize "FFD20.BABAbbr"}}</span></a></h5>
    <span class="value">
      {{#if iteratives}}
      {{iteratives}}
      {{else}}
      {{numberFormat system.attributes.bab.total decimals=0 sign=true}}
      {{/if}}
    </span>
  </div>

  {{! CMB }}
  <div class="info-box attribute attack cmb" data-attribute="cmb" {{#unless system.config.noManeuvers}}data-tooltip-extended="cmb"{{/unless}}>
    <h5><a class="{{#unless system.config.noManeuvers}}rollable{{else}}disabled{{/unless}}" data-type="cmb" data-ranged="false">{{localize "FFD20.CMBAbbr"}}</a></h5>
    <span class="value">
      {{#if system.config.noManeuvers}}
      <i class="fa-solid fa-minus" inert></i>
      {{else}}
      {{numberFormat system.attributes.cmb.total decimals=0 sign=true}}
      {{/if}}
    </span>
  </div>

  <div class="info-box-joined generic-attacks">
    {{! Melee }}
    <div class="info-box attribute attack melee weapon" data-tooltip-extended="generic.attack.melee">
      <h5><a class="rollable" data-type="weapon" data-ranged="false"><span>{{localize "FFD20.Melee"}}</span></a></h5>
      <span class="value">{{numberFormat genericAttacks.melee.modifier decimals=0 sign=true}}</span>
    </div>

    {{! Ranged }}
    <div class="info-box attribute attack ranged weapon" data-tooltip-extended="generic.attack.ranged">
      <h5><a class="rollable" data-type="weapon" data-ranged="true"><span>{{localize "FFD20.Ranged"}}</span></a></h5>
      <span class="value">{{numberFormat genericAttacks.ranged.modifier decimals=0 sign=true}}</span>
    </div>
  </div>

  {{! Initiative }}
  <div class="info-box attribute initiative" data-attribute="initiative" data-tooltip-extended="init">
    <h5><a class="rollable"><span>{{localize "FFD20.Initiative"}}</span></a></h5>
    <span class="value">{{numberFormat system.attributes.init.total sign=true}}</span>
  </div>
</header>

<hr>

{{!-- Attack Filters --}}
{{> "systems/ffd20/templates/actors/parts/actor-item-nav-filters.hbs" category="attacks" sections=sections}}

{{!-- Attacks Header --}}
<div class="combat-attacks">
  <section class="attacks-body">
    <ol class="item-groups-list">
    {{#each sections as |section sid|}}
    {{#unless section._hidden}}
      <ol class="item-list" data-list="{{id}}" data-type="{{create.type}}" data-subtype="{{create.system.subType}}">
        <li class="item-list-header flexrow attacks-{{id}}">
          <div class="item-name">
            <h3>{{section.label}}</h3>
          </div>

          {{#if section.showTypes}}<div class="item-detail item-type"><i class="icon-pf icon-magic-palm" data-tooltip="FFD20.Type"></i></div>{{/if}}

          <div class="item-detail item-attacks">
            <label>{{localize "FFD20.Attacks"}}</label>
          </div>

          <div class="item-detail item-damage">
              <label>{{localize "FFD20.Damage"}}</label>
          </div>

          <div class="item-detail item-range">
              <label>{{localize "FFD20.Range"}}</label>
          </div>

          <div class="item-detail item-actions"><i class="icon-pf icon-gears" data-tooltip="FFD20.ActionPlural"></i></div>

          <div class="item-detail item-uses"><i class="icon-pf icon-battery-pack" data-tooltip="FFD20.ChargePlural"></i></div>

          {{#if @root.owner}}
          <div class="item-controls">
            {{#if interface.create}}
            <a class="item-control item-create" data-tooltip="FFD20.CreateItem" data-create="{{path}}">
              <i class="fa-solid fa-plus" inert></i>
            </a>
            {{/if}}
          </div>
          {{/if}}
        </li>

        {{#each section.items as |item iid|}}
        <li class="item flexrow{{#if isBroken}} broken{{/if}}" data-item-id="{{item.id}}">
          <div class="item-name rollable">
            <div class="item-image" style='background-image: url("{{item.img}}")' data-tooltip="FFD20.DisplayInChat"></div>
            <h4>{{item.name~}}</h4>
          </div>

          {{#if section.showTypes}}
          <div class="item-detail item-type">
            <span>{{lookup @root.config.attackTypes item.subType}}</span>
          </div>
          {{/if}}

          <div class="item-detail item-attacks" data-tooltip-extended="item.{{item.id}}.attacks">
            {{#if item.hasAttack}}
            <label>{{attackSummary}}</label>
            {{/if}}
          </div>

          <div class="item-detail item-damage tooltip" data-tooltip-extended="item.{{item.id}}.damage">
            {{#if item.hasDamage}}
              <label class="resolved-formula">{{actionDamage item.document.defaultAction}}</label>
            {{/if}}
          </div>

          <div class="item-detail item-range" data-tooltip-extended="item.{{item.id}}.range">
            {{#if item.hasRange}}
            <label>{{actionRange item.document.defaultAction @root.rollData}}</label>
            {{/if}}
          </div>

          <div class="item-detail item-actions">
            <div class="item-action">
              {{#if item.hasAction}}
              <a class="item-control item-action action roll" data-tooltip="FFD20.PerformAttack">
                <i class="fa-solid fa-dice-d20" inert></i>
              </a>
              {{/if}}
            </div>
          </div>

          <div class="item-detail item-uses flexrow" data-tooltip-extended="item.{{item.id}}.resources">
            {{#if item.isCharged}}
            <span class="text-box value allow-relative" data-wheel-step="1" data-dtype="Number">{{item.charges}}</span>
              {{#unless item.noMaxCharges}}
              <span class="sep"> / </span>
              <span class="max">{{item.maxCharges}}</span>
              {{/unless}}
            {{else if item.usesAmmo}}
            <span class="ammo-remaining">{{item.ammoRemaining}}</span>
            {{/if}}
          </div>

          {{#if @root.owner}}
          <div class="item-controls">
            <a class="item-control item-edit" data-tooltip="FFD20.EditItem"><i class="fa-solid fa-edit" inert></i></a>
            {{#if ../interface.create}}
            <a class="item-control item-duplicate" data-tooltip="FFD20.DuplicateItem"><i class="fa-solid fa-copy" inert></i></a>
            <a class="item-control item-delete" data-tooltip="FFD20.DeleteItem"><i class="fa-solid fa-trash" inert></i></a>
            {{/if}}
          </div>
          {{/if}}
        </li>
        {{/each}}
      </ol>
    {{/unless}}
    {{/each}}
    </ol>
  </section>
</div>

<hr>

{{!-- Defenses Header --}}
<div class="combat-defenses">
  <ul class="attributes flexrow">
    {{!-- Display Defenses --}}
    <li class="generic-defenses flexrow" data-drag="defenses">
      <h3>
        <i class="fa-solid fa-dice-d20 rollable"></i>
        {{localize "FFD20.Defenses"}}
      </h3>
    </li>

    {{!-- Natural Armor --}}
    <li class="natural-armor flexrow">
      <h3>{{localize "FFD20.BuffTarACNatural"}}</h3>
      <input name="system.attributes.naturalAC" type="number" value="{{system.attributes.naturalAC}}" placeholder="0" min="0" step="1">
    </li>

    <li class="flexrow">
      <h3>{{localize "FFD20.SpellResistance"}}</h3>
      <input class="formula" name="system.attributes.sr.formula" type="text" placeholder="{{localize "FFD20.Formula"}}"
        value="{{#if system.attributes.sr.formula}}{{system.attributes.sr.formula}}{{/if}}">
    </li>
  </ul>

  {{> "systems/ffd20/templates/actors/parts/actor-defenses_tables.hbs"}}

  <div class="attributes defense-notes flexcol scroll-primary" data-scroll-index="defense-notes">
    <div class="flexrow">
      <h3>{{localize "FFD20.SaveNotes"}}</h3>
      <textarea class="context-text" name="system.attributes.saveNotes" placeholder="{{localize "FFD20.SaveNotes"}}">{{system.attributes.saveNotes}}</textarea>
    </div>
    <hr>
    <div class="flexrow">
      <h3>{{localize "FFD20.ACNotes"}}</h3>
      <textarea class="context-text" name="system.attributes.acNotes" placeholder="{{localize "FFD20.ACNotes"}}">{{system.attributes.acNotes}}</textarea>
    </div>
    <hr>
    <div class="flexrow">
      <h3>{{localize "FFD20.CMDNotes"}}</h3>
      <textarea class="context-text" name="system.attributes.cmdNotes" placeholder="{{localize "FFD20.CMDNotes"}}">{{system.attributes.cmdNotes}}</textarea>
    </div>
    <hr>
    <div class="flexrow">
      <h3>{{localize "FFD20.SpellResistanceNotes"}}</h3>
      <textarea class="context-text" name="system.attributes.srNotes" placeholder="{{localize "FFD20.SpellResistanceNotes"}}">{{system.attributes.srNotes}}</textarea>
    </div>
    <hr>
  </div>
</div>
