        <span class="span2 align-left"></span>@attributes.mp.max :</span><span class="span1 align-right"></span>{{system.attributes.mp.max}}</span>
        <span class="span2 align-left"></span>@attributes.mp.temp :</span><span class="span1 align-right"></span>{{system.attributes.mp.temp}}</span>
        <span class="span2 align-left"></span>@attributes.mp.recover :</span><span class="span1 align-right"></span>{{system.attributes.mp.recover}}</span>

        {{> "systems/ffd20/templates/actors/parts/actor-source-details.hbs" target=sourceDetails.system.attributes.mp.max }}
      </div>
    </div>
  </div>
    <div class='speed-details flexcol pseudo-table'>
      <h3 class='header'>{{localize "FFD20.Speed"}}</h3>
      <ul class='flexrow'>
        <li class='flexcol land tooltip'>
