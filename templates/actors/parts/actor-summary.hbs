<div class="flexrow summary-header">
  <img class="profile" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>

  <div class="flexcol">
    <div class="flexrow name-xp">
      <div>
        <h1 class="charname">
          <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "FFD20.CharacterName"}}" title="{{localize "FFD20.CharacterName"}}"/>
        </h1>
      </div>

      {{#if isCharacter}}
      <div class="hd-level character tooltip">
        <span class="tooltipcontent">
          @attributes.hd.total : {{system.attributes.hd.total}}
          {{#if system.details.mythicTier}}
          <br />
          @details.mythicTier : {{system.details.mythicTier}}
          {{/if}}
        </span>

        <table>
          <thead>
            <tr>
              <th class="level">{{localize "FFD20.Level"}}</th>
              {{#if system.details.mythicTier}}
              <th class="tier">{{localize "FFD20.Tier"}}</th>
              {{/if}}
              {{#unless disableExperience}}
              <th class="experience">{{localize "FFD20.Experience"}}</th>
              {{/unless}}
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="level">
                {{system.details.level.value}}
              </td>
              {{#if system.details.mythicTier}}
              <td class="tier">
                {{system.details.mythicTier}}
              </td>
              {{/if}}
              {{#unless disableExperience}}
              <td class="experience">
                <div class="flexrow">
                  <span class="text-box direct allow-relative no-value-cap" name="system.details.xp.value"
                    {{#if minimumExperience}}data-clear-value="{{minimumExperience}}"{{/if}} data-dtype="Number">{{system.details.xp.value}}</span>
                  <span class="separator"> / </span>
                  <span class="text-box max readonly">{{system.details.xp.max}}</span>
                </div>
              </td>
              {{/unless}}
            </tr>
          </tbody>
        </table>

        {{#unless disableExperience}}
        <div class="xpbar">
          {{#if system.details.xp.pct}}
          <span class="bar" style="width: {{system.details.xp.pct}}%"></span>
          {{/if}}
        </div>
        {{/unless}}
      </div>
      {{else}}
      <div class="hd-level npc tooltip flexrow">
        <table>
          <thead>
            <tr>
              <th class="level">{{localize "FFD20.HitDieShort"}}</th>
              {{#if system.details.mythicTier}}
              <th class="tier">{{localize "FFD20.Tier"}}</th>
              {{/if}}
              <th>{{localize "FFD20.ChallengeRatingShort"}}</th>
              <th>{{localize "FFD20.Experience"}}</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="level">
                {{system.attributes.hd.total}}
              </td>
              {{#if system.details.mythicTier}}
              <td class="tier">
                {{system.details.mythicTier}}
              </td>
              {{/if}}
              <td>
                <span class="text-box cr-input" name="system.details.cr.base">{{labels.cr}}</span>
              </td>
              <td class="experience">
                {{system.details.xp.value}}
              </td>
            </tr>
          </tbody>
        </table>

        <span class="tooltipcontent">
          @attributes.hd.total : {{system.attributes.hd.total}}<br/>
          @details.cr.base : {{system.details.cr.base}}<br/>
          @details.cr.total : {{system.details.cr.total}}
          {{#if system.details.mythicTier}}
          <br />
          @details.mythicTier : {{system.details.mythicTier}}
          {{/if}}
        </span>
      </div>
      {{/if}}
    </div>

    {{!-- Character Summary --}}
    <div class="character-summary flexrow">
      <div>
        <input type="text" name="system.details.gender" value="{{system.details.gender}}" placeholder="{{localize "FFD20.Gender"}}" title="{{localize "FFD20.Gender"}}"/>
      </div>
      <div>
        <input type="text" name="system.details.deity" value="{{system.details.deity}}" placeholder="{{localize "FFD20.Deity"}}" title="{{localize "FFD20.Deity"}}"/>
      </div>
      <div>
        <input type="text" name="system.details.age" value="{{system.details.age}}" placeholder="{{localize "FFD20.Age"}}" title="{{localize "FFD20.Age"}}"/>
      </div>
      <div>
        <input type="text" name="system.details.height" value="{{system.details.height}}" placeholder="{{localize "FFD20.Height"}}" title="{{localize "FFD20.Height"}}"/>
      </div>
      <div>
        <input type="text" name="system.details.weight" value="{{system.details.weight}}" placeholder="{{localize "FFD20.Weight"}}" title="{{localize "FFD20.Weight"}}"/>
      </div>

      {{!-- Alignment --}}
      <div class="controls alignment flexrow" title="{{localize "FFD20.Alignment"}}">
        {{#if labels.alignment}}<span>{{labels.alignment}}</span>{{else}}<span class="placeholder">{{localize "FFD20.Alignment"}}</span>{{/if}}
        <a class="control alignment"><i class="fas fa-cog"></i></a>
      </div>
    </div>

    {{!-- Race information --}}
    <div class="flexrow">
      <div class="race-container item flexrow" {{#if race}}data-item-id="{{race._id}}"{{/if}} title="{{localize "FFD20.Race"}}">
        <div class="race item-image rollable" style="background-image: url({{race.img}})" title="{{labels.race}}">
          {{#unless race}}{{localize "FFD20.Race"}}{{/unless}}
        </div>

        <div class="item-controls flexcol">
          {{#if owner}}
          {{#unless race}}
          <a class="item-control add" title="{{localize "FFD20.CreateItem"}}"><i class="fas fa-plus"></i></a>
          <a data-action="compendium" data-action-target="races" title="{{localize "FFD20.OpenCompendium"}}"><i class="fas fa-folder-plus"></i></a>
          {{/unless}}
          {{#if race}}
          <a class="item-control edit" title="{{localize "FFD20.EditItem"}}"><i class="fas fa-edit"></i></a>
          <a class="item-control delete" title="{{localize "FFD20.DeleteItem"}}"><i class="fas fa-trash"></i></a>
          {{/if}}
          {{/if}}
        </div>

        {{#if race}}
        <div class="race-info tag-list">
          <span class="tag type3">{{lookup config.creatureTypes race.system.creatureType}}</span>
          {{#each race.system.subTypes as |v|}}
          <span class="tag">{{v}}</span>
          {{/each}}
        </div>
        {{/if}}
      </div>
      <div class="flexrow item-list misc-header-items">
        {{!-- Rest --}}
        <div class="actor-quick-actions">
          <button type="button" class="rest"><i class="fas fa-bed"></i> {{localize "FFD20.Rest"}}</button>
        </div>
      </div>
    </div>
  </div>
</div>

