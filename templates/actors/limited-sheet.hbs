<form class="{{cssClass}} pf1-sheet" autocomplete="off">

  <!-- HEADER -->
  <header class="sheet-header">
    <h1 class="char-name">
      <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "FFD20.CharacterName"}}"/>
    </h1>
  </header>

  <!-- BODY -->
  <section class="sheet-body tab">
    <img class="sheet-profile" src="{{actor.img}}" data-tooltip="{{actor.name}}" data-edit="img"/>
    <div class="tab biography">
      {{editor biographyHTML target="system.details.biography.value" button=true editable=editable engine="prosemirror" collaborate=false}}
    </div>
  </section>
</form>
