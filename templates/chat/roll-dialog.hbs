<form>
  <div class="form-group">
      <label>{{localize "FFD20.BaseDice"}}</label>
      <input class="attribute" type="text" name="d20" value="{{d20}}" placeholder="e.g. 2d20kl"/>
  </div>
  <div class="form-group">
    <label>{{localize "FFD20.SituationalBonus"}}</label>
    <input type="text" name="bonus" value="{{bonus}}" placeholder="e.g. +1d4"/>
  </div>
  <div class="form-group">
    <label>{{localize "FFD20.RollMode"}}</label>
    <select name="rollMode">
      {{#select rollMode}}
      {{#each rollModes as |label mode|}}
      <option value="{{mode}}">{{localize label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>
</form>
