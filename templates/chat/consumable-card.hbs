<div class="ffd20 chat-card weapon-card" data-actor-id="{{actor.id}}" data-item-id="{{item._id}}" {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>
  <header class="card-header type-color type-{{item.type}} flexrow">
      <img src="{{item.img}}" data-tooltip="{{name}}" width="36" height="36"/>
      <div class="item-name">
        <h3>{{name}}</h3>
      </div>
  </header>

  <div class="card-content">{{{description}}}</div>

  <footer class="card-footer">
    {{#if data.properties.length}}
      <div class="flexcol property-group gm-sensitive general-notes">
        <label>{{localize "FFD20.Tags"}}</label>
        <div class="flexrow tag-list">
          {{#each data.properties}}
            <span class="tag">{{{this}}}</span>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </footer>
</div>
