<h2>{{localize "ffd20lnrw.MagicItems"}}</h2>
<table class="magic-items-table">
  <thead>
    <tr>
      <th class="name">{{localize "ffd20lnrw.Item"}}</th>
      <th class="aura">{{localize "ffd20lnrw.Aura"}}</th>
      <th class="cl">{{localize "ffd20lnrw.CasterLevel"}}</th>
      {{#if isGM}}
      <th class="identify-dc">{{localize "ffd20lnrw.IdentifyDC"}}</th>
      <th class="identify"><i class="icon icon-quill-ink large" title="{{localize "ffd20lnrw.Identified"}}"></i></th>
      {{/if}}
    </tr>
  </thead>
  <tbody>
  {{#each items as |item|}}
    <tr class="item" data-item-id="{{item._id}}">
      <td class="nocenter"><img src="{{item.img}}" width="24" height="24">{{item.name}}{{#if item.quantity}} (x{{item.quantity}}){{/if}}</td>
      <td>{{{item.school}}}</td>
      <td>{{item.cl}}</td>
      {{#if ../isGM}}
      <td>{{item.identifyDC}}</td>
      <td>
        <a class="item-control item-identify">
          {{#if item.identified}}
          <i class="fas fa-check"></i>
          {{else}}
          <i class="fas fa-times"></i>
          {{/if}}
        </a>
      </td>
      {{/if}}
    </tr>
  {{/each}}
  </tbody>
</table>
