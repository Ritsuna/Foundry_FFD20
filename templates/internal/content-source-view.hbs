<div class="content-source {{#unless @root.bookSources.main.title}}missing{{/unless}}">
  <span class="source"
  {{#with @root.bookSources.main~}}
    {{#if title~}}
    data-tooltip-class="ffd20 source"
    data-tooltip="
    <p>{{~#if id}}{{localize "FFD20.ContentSource.Info.ID"}}: {{id}}<br>{{/if~}}
    {{~#if edition}}{{localize "FFD20.ContentSource.Info.Edition"}}: {{edition}}<br>{{/if~}}
    {{~#if errata}}{{localize "FFD20.ContentSource.Info.Errata"}}: {{errata}}<br>{{else if date}}{{localize "FFD20.ContentSource.Info.Release"}}: {{date}}<br>{{/if~}}
    {{~#if publisher}}{{localize "FFD20.ContentSource.Info.Publisher"}}: {{publisher}}<br>{{/if~}}
    {{#with ../bookSources.extras}}
      <h5>{{localize "FFD20.ContentSource.Extras"}}</h5>
      <p>{{#each this}}{{title}}<br>{{/each}}
    {{/with}}
    "{{/if}}>
    <span class="title">{{title}}</span>
    {{#if abbr}}
    <span class="abbr">{{abbr}}</span>
    {{/if}}
    {{#if pages}}
    <span class="pages">{{localize "FFD20.ContentSource.Pages" pages=pages}}</span>
    {{/if}}
    {{#if url}}
    <span class="date">{{date}}</span>
    <span class="url"><a href="{{url}}">{{url}}</a></span>
    {{/if}}
    {{#if ../bookSources.extras}}<span class="extra-source-count">{{numberFormat ../bookSources.extras.length sign=true}}</span>{{/if}}
  {{else}}
    >{{localize "FFD20.ContentSource.Missing"}}
  {{/with}}
  </span>
  <div class="control">
    <a data-action="edit" class="edit" data-tooltip="FFD20.ContentSource.EditHint">
      <i class="fa-solid fa-edit edit" inert></i>
    </a>
  </div>
</div>
