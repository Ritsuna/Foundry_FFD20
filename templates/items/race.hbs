<form class="{{cssClass}} flexcol" autocomplete="off">

  {{!-- Item Sheet Header --}}
  <header class="sheet-header flexrow">
    <img class="profile" src="{{item.img}}" title="{{item.name}}" data-edit="img"/>

    <div class="header-details flexrow">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="{{localize "ffd20lnrw.ItemName"}}"/>
      </h1>
      <div class="item-subtitle">
        <h4 class="item-type">{{localize "ffd20lnrw.Race"}}</h4>
      </div>
    </div>
  </header>

  {{!-- Item Sheet Navigation --}}
  <nav class="sheet-navigation tabs" data-group="primary">
    <a class="item active" data-tab="description">{{ localize "ffd20lnrw.Description" }}</a>
    <a class="item" data-tab="details">{{ localize "ffd20lnrw.Details" }}</a>
    <a class="item" data-tab="changes">{{localize "ffd20lnrw.Changes"}}</a>
    <a class="item" data-tab="links">{{localize "ffd20lnrw.Links"}}</a>
  </nav>

  {{!-- Item Sheet Body --}}
  <section class="primary-body">

    {{!-- Description Tab --}}
    <div class="tab flexcol active" data-group="primary" data-tab="description">
      {{roll-editor content=data.description.value target="data.description.value" button=true owner=owner editable=editable}}
    </div>

    {{!-- Details Tab --}}
    <div class="tab details" data-group="primary" data-tab="details">

      {{!-- Racial Type --}}
      <div class="form-group">
        <label>{{localize "ffd20lnrw.CreatureType"}}</label>
        <select name="data.creatureType">
          {{#select data.creatureType}}
          {{#each config.creatureTypes as |name type|}}
          <option value="{{type}}">{{name}}</option>
          {{/each}}
          {{/select}}
        </select>
      </div>

      <div class="form-group stacked">
        <div class="data-selector">
          <a class="entry-selector" for="data.subTypes" data-fields="{{localize "ffd20lnrw.RaceSubtypePlural"}}" data-dtypes="String"><i class="fas fa-edit"></i></a>
          <label for="data.subTypes">{{localize "ffd20lnrw.RaceSubtypePlural"}}</label>
        </div>
      </div>

      {{!-- Proficiencies --}}
      <div class="form-group {{data.armorProf.cssClass}}">
        <label for="data.weaponProf">{{localize "ffd20lnrw.TraitWeaponProf"}}</label>
        <ul class="traits-list">
          {{#each data.weaponProf.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
          {{/each}}
        </ul>
        <a class="trait-selector" data-options="weaponProficiencies"><i class="fas fa-edit"></i></a>
      </div>

      <div class="form-group {{data.armorProf.cssClass}}">
        <label for="data.armorProf">{{localize "ffd20lnrw.TraitArmorProf"}}</label>
        <ul class="traits-list">
          {{#each data.armorProf.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
          {{/each}}
        </ul>
        <a class="trait-selector" data-options="armorProficiencies"><i class="fas fa-edit"></i></a>
      </div>
    </div>

    <div class="tab flexcol" data-group="primary" data-tab="changes">
      {{> "systems/ffd20lnrw/templates/items/parts/item-changes.hbs"}}

      {{> "systems/ffd20lnrw/templates/items/parts/item-notes.hbs"}}
    </div>

    <div class="tab flexcol" data-group="primary" data-tab="links">
      {{> "systems/ffd20lnrw/templates/items/parts/item-links.hbs"}}
    </div>
  </section>
</form>
