{{!-- Action Type --}}
<div class="form-group select">
  <label>{{localize "FFD20.ActionType"}}</label>
  <select name="data.actionType">
    {{#select data.actionType}}
    <option value=""></option>
    {{#each config.itemActionTypes as |name type|}}
    <option value="{{type}}">{{name}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>
{{#if data.actionType}}

{{#if isSpell}}
<div class="form-group">
  <label>{{localize "FFD20.SpellEffect"}}</label>
  <div class="form-fields">
    <input type="text" name="data.spellEffect" value="{{data.spellEffect}}" placeholder="{{localize "FFD20.SpellEffectExample"}}"/>
  </div>
</div>
{{/if}}

{{#if hasAttackRoll }}

{{!-- Attack Name --}}
<div class="form-group">
  <label>{{localize "FFD20.AttackName"}}</label>
  <div class="form-fields">
    <input type="text" name="data.attackName" value="{{data.attackName}}" placeholder="{{localize "FFD20.Attack"}}" />
  </div>
</div>

{{!-- Attack Roll Bonus --}}
<div class="form-group">
  <label>{{localize "FFD20.AttackRollBonus"}}</label>
  <div class="form-fields">
    <input class="formula" type="text" name="data.attackBonus" value="{{data.attackBonus}}" placeholder="{{localize "FFD20.Formula"}}"/>
  </div>
</div>

{{#unless isCombatManeuver}}
<div class="form-group">
  <label>{{localize "FFD20.CriticalThreatRange"}}</label>
  <div class="form-fields">
    <input type="text" name="data.ability.critRange" value="{{data.ability.critRange}}" data-dtype="Number"/>
  </div>
</div>

<div class="form-group">
  <label>{{localize "FFD20.CriticalMultiplier"}}</label>
  <div class="form-fields">
    <input type="text" name="data.ability.critMult" value="{{data.ability.critMult}}" data-dtype="Number"/>
  </div>
</div>
<div class="form-group">
  <label>{{localize "FFD20.CriticalConfirmBonus"}}</label>
  <div class="form-fields">
    <input class="formula" type="text" name="data.critConfirmBonus" value="{{data.critConfirmBonus}}" placeholder="{{localize "FFD20.Formula"}}"/>
  </div>
</div>
{{/unless}}

{{!-- Attack Ability --}}
<div class="form-group select">
  <label>{{localize "FFD20.AttackAbility"}}</label>
  <select name="data.ability.attack">
    {{#select data.ability.attack}}
    <option value=""></option>
    {{#each config.abilities as |ability a|}}
    <option value="{{a}}">{{ability}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>

<hr />

<h4 class="attack-header">
  {{localize "FFD20.ExtraAttacks"}}
</h4>
<ol class="attack-parts form-group">
  {{#each data.attackParts as |part a|}}
  <li class="attack-part flexrow" data-attack-part="{{a}}">
    <input class="formula" type="text" name="data.attackParts.{{a}}.0" placeholder="{{localize "FFD20.AttackBonusFormula"}}" value="{{lookup this "0"}}"/>
    <input type="text" name="data.attackParts.{{a}}.1" placeholder="{{localize "FFD20.Name"}}" value="{{lookup this "1"}}"/>
    <a class="attack-control delete-attack"><i class="fas fa-trash"></i></a>
  </li>
  {{/each}}
  <li class="attack-part flexrow"><a class="attack-control add-attack"><i class="fas fa-plus"></i> {{localize "FFD20.AddAttack"}}</a></li>
</ol>

{{!-- Formulaic Extra Attacks --}}
<h4 class="attack-header">{{localize 'FFD20.FormulaicExtraAttacks'}}</h4>
<div class="formulaic-attacks-box">
<div class="form-group">
  <label>{{localize 'FFD20.FormulaicAttacksCount'}}</label>
  <input type="text" class="formulaic-attacks formula" name="data.formulaicAttacks.count.formula" value="{{data.formulaicAttacks.count.formula}}" data-dtype="String" placeholder="ceil(@attributes.bab.total / 5) - 1" />
  {{!-- to avoid disappearance of .value --}}
  <input type="text" disabled class="formula-result small" name="data.formulaicAttacks.count.value" value="{{data.formulaicAttacks.count.value}}" title="{{localize 'FFD20.FormulaResult'}}" placeholder="0" data-dtype="Number" />
</div>
<div class="form-group">
  <label>{{localize 'FFD20.AttackBonusFormula'}}</label>
  <input type="text" class="formula" name="data.formulaicAttacks.bonus.formula" value="{{data.formulaicAttacks.bonus.formula}}" data-dtype="String" placeholder="@formulaicAttack * -5" />
</div>
<div class="form-group">
  <label>{{localize 'FFD20.AttackName'}}</label>
  <input type="text" name="data.formulaicAttacks.label" value="{{data.formulaicAttacks.label}}" title="{{localize 'FFD20.FormulaAttackHint'}}" data-dtype="String" placeholder="{{localize 'FFD20.FormulaAttack'}}" />
</div>
</div>

<hr />
{{/if}}

{{!-- Damage Ability --}}
<div class="form-group select">
  <label>{{localize "FFD20.DamageAbility"}}</label>
  <select name="data.ability.damage">
    {{#select data.ability.damage}}
    <option value=""></option>
    {{#each config.abilities as |ability a|}}
    <option value="{{a}}">{{ability}}</option>
    {{/each}}
    {{/select}}
  </select>
  <select name="data.ability.damageMult" data-dtype="Number">
    {{#select data.ability.damageMult}}
    <option value="0.5">x0.5</option>
    <option value="1" {{#unless data.ability.damageMult}}selected="selected"{{/unless}}>x1</option>
    <option value="1.5">x1.5</option>
    <option value="2">x2</option>
    <option value="2.5">x2.5</option>
    {{/select}}
  </select>
</div>

<hr>

{{!-- Damage Formula --}}
<div class="damage" data-key="data.damage.parts">
  <h4 class="damage-header">
    {{#unless isHealing }}{{localize "FFD20.DamageFormula"}}{{ else }}{{localize "FFD20.HealingFormula"}}{{/unless}}
  </h4>
  <ol class="damage-parts form-group tooltip">
    {{#each data.damage.parts as |part i| }}
    <li class="damage-part flexrow" data-damage-part="{{i}}">
      <input class="damage-formula formula" type="text" name="data.damage.parts.{{i}}.0" placeholder="{{#unless isHealing }}{{localize "FFD20.DamageFormula"}}{{ else }}{{localize "FFD20.HealingFormula"}}{{/unless}}" value="{{lookup this "0"}}"/>
      <input class="damage-type" type="text" name="data.damage.parts.{{i}}.1" placeholder="{{localize "FFD20.DamageTypes"}}" value="{{lookup this "1"}}"/>
      <a class="damage-control delete-damage"><i class="fas fa-trash"></i></a>
    </li>
    {{/each}}
    <li class="damage-part flexrow"><a class="damage-control add-damage"><i class="fas fa-plus"></i>
        {{#unless isHealing}}{{localize "FFD20.AddDamage"}}{{else}}{{localize "FFD20.AddHealing"}}{{/unless}}
      </a></li>
  </ol>
</div>

<hr>

{{#unless isCombatManeuver}}
{{!-- Critical Damage Bonus Formula --}}
<div class="damage" data-key="data.damage.critParts">
  <h4 class="damage-header">
    {{#unless isHealing }}{{localize "FFD20.CritDamageBonusFormula"}}{{ else }}{{localize "FFD20.CritHealingBonusFormula"}}{{/unless}}
  </h4>
  <ol class="damage-parts form-group tooltip">
    {{#each data.damage.critParts as |part i| }}
    <li class="damage-part flexrow" data-damage-part="{{i}}">
      <input class="damage-formula formula" type="text" name="data.damage.critParts.{{i}}.0" placeholder="{{#unless isHealing }}{{localize "FFD20.DamageFormula"}}{{ else }}{{localize "FFD20.HealingFormula"}}{{/unless}}" value="{{lookup this "0"}}"/>
      <input class="damage-type" type="text" name="data.damage.critParts.{{i}}.1" placeholder="{{localize "FFD20.DamageTypes"}}" value="{{lookup this "1"}}"/>
      <a class="damage-control delete-damage"><i class="fas fa-trash"></i></a>
    </li>
    {{/each}}
    <li class="damage-part flexrow"><a class="damage-control add-damage"><i class="fas fa-plus"></i> {{localize "FFD20.AddCriticalDamage"}}</a></li>
  </ol>
</div>

<hr>

{{!-- Non-critical Damage Bonus Formula --}}
<div class="damage" data-key="data.damage.nonCritParts">
  <h4 class="damage-header">
    {{#unless isHealing }}{{localize "FFD20.NonCritDamageBonusFormula"}}{{ else }}{{localize "FFD20.NonCritHealingBonusFormula"}}{{/unless}}
  </h4>
  <ol class="damage-parts form-group">
    {{#each data.damage.nonCritParts as |part i| }}
    <li class="damage-part flexrow" data-damage-part="{{i}}">
      <input class="damage-formula formula" type="text" name="data.damage.nonCritParts.{{i}}.0" placeholder="{{#unless isHealing }}{{localize "FFD20.DamageFormula"}}{{ else }}{{localize "FFD20.HealingFormula"}}{{/unless}}" value="{{lookup this "0"}}"/>
      <input class="damage-type" type="text" name="data.damage.nonCritParts.{{i}}.1" placeholder="{{localize "FFD20.DamageTypes"}}" value="{{lookup this "1"}}"/>
      <a class="damage-control delete-damage"><i class="fas fa-trash"></i></a>
    </li>
    {{/each}}
    <li class="damage-part flexrow"><a class="damage-control add-damage"><i class="fas fa-plus"></i> {{localize "FFD20.AddNonCriticalDamage"}}</a></li>
  </ol>
</div>

<hr>
{{/unless}}

{{!-- Saving Throw --}}
<div class="form-group input-select">
  <label>{{#unless isSpell}}{{localize "FFD20.DC"}}{{else}}{{localize "FFD20.DCOffset"}}{{/unless}}</label>
  <div class="form-fields">
    <input class="formula" type="text" name="data.save.dc" value="{{data.save.dc}}" placeholder="{{#unless isSpell}}{{localize "FFD20.DC"}}{{else}}{{localize "FFD20.DCOffset"}}{{/unless}}"/>
    <select name="data.save.type">
      {{#select data.save.type}}
      <option value=""></option>
      {{#each config.savingThrows as |save type|}}
      <option value="{{type}}">{{save}}</type>
      {{/each}}
      {{/select}}
    </select>
  </div>
</div>

<div class="form-group input-select">
  <label>{{localize "FFD20.SavingThrowEffect"}}</label>
  <div class="form-fields">
    <input type="text" name="data.save.description" value="{{data.save.description}}" placeholder="{{localize "FFD20.DCDescriptionExample"}}"/>
  </div>
</div>

{{!-- Attack Notes --}}
{{#if hasAttackRoll}}
<div class="form-group stacked notes attack" data-name="data.attackNotes">
  <table>
    <thead>
      <th>{{localize "FFD20.AttackNotes"}}</th>
      <th class="entry-control"><a class="add-entry"><i class="fas fa-plus"></i></a></th>
    </thead>
    <tbody>
      {{#each data.attackNotes as |entry index|}}
      <tr class="entry" data-index="{{index}}">
        <td class="nocenter"><input type="text" data-index="{{k}}" value="{{entry}}" name="data.attackNotes.{{index}}" /></td>
        <td class="entry-control"><a class="delete-entry"><i class="fas fa-minus"></i></a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{/if}}

{{!-- Effect Notes --}}
<div class="form-group stacked notes effect" data-name="data.effectNotes">
  <table>
    <thead>
      <th>{{localize "FFD20.EffectNotes"}}</th>
      <th class="entry-control"><a class="add-entry"><i class="fas fa-plus"></i></a></th>
    </thead>
    <tbody>
      {{#each data.effectNotes as |entry index|}}
      <tr class="entry" data-index="{{index}}">
        <td class="nocenter"><input type="text" data-index="{{k}}" value="{{entry}}" name="data.effectNotes.{{index}}" /></td>
        <td class="entry-control"><a class="delete-entry"><i class="fas fa-minus"></i></a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{/if}}

{{!-- Sound Effect --}}
<div class="form-group">
  <label>{{localize "FFD20.SoundEffect"}}</label>
  <div class="form-fields">
    <input type="text" name="data.soundEffect" placeholder="path/audio.wav" value="{{data.soundEffect}}"/>
    <button type="button" class="file-picker-alt" data-for="data.soundEffect" data-type="audio">
      <i class="fas fa-file-import fa-fw"></i>
    </button>
  </div>
</div>
