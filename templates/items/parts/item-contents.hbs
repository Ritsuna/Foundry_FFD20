<section class="inventory-body">
  {{#each sections as |section sid|}}
  <div class="inventory-group flexcol">
    <ol class="inventory-list">
      <li class="inventory-header flexrow">
        <h3 class="item-name flexrow">{{section.label}}</h3>

        {{#if section.hasActions}}<div class="item-detail item-actions"><i class="icon icon-gears large" title="{{localize "ffd20lnrw.ActionPlural"}}"></i></div>{{/if}}

        {{#if section.showValue}}
        <div class="item-detail item-value"><i class="icon icon-coins large" title="{{localize "ffd20lnrw.Value"}}"></i></div>
        {{/if}}
        <div class="item-detail item-weight"><i class="icon icon-weight large" src="systems/ffd20lnrw/icons/actions/weight.svg" title="{{localize "ffd20lnrw.ItemWeight"}}"></i></div>
        {{#if ../isGM}}
        <div class="item-detail item-identified"><i class="icon icon-quill-ink large" title="{{localize "ffd20lnrw.Identified"}}"></i></div>
        {{/if}}
        <div class="item-detail item-uses"><i class="icon icon-battery-pack large" title="{{localize "ffd20lnrw.ChargePlural"}}"></i></div>

        {{#if ../owner}}
        <div class="item-controls">
          {{#if section.canCreate}}
          <a class="item-control item-create" title="{{localize "ffd20lnrw.CreateItem"}}" {{#each section.dataset as |v k|}}data-{{k}}="{{v}}"{{/each}}>
            <i class="fas fa-plus"></i> {{localize "ffd20lnrw.Add"}}
          </a>
          {{/if}}
        </div>
        {{/if}}
      </li>

      <ol class="item-list">
        {{#each section.items as |item iid|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name flexrow">
            <div class="item-image rollable" style="background-image: url({{item.img}})"></div>
            <h4 class="rollable{{#if item.empty}} strikethrough-text{{/if}}">
              {{~#if item.isStack}}({{item.data.quantity}}) {{/if}}
              {{item.name~}}
            </h4>
          </div>

          {{#if section.hasActions}}
          <div class="item-detail item-actions">
            <div class="item-attack tooltip">
              {{#unless item.showUnidentifiedData}}
              {{#if item.hasAction}}
              <span class="tooltipcontent">
                {{localize "ffd20lnrw.UseItem"}}
              </span>
              <a class="item-control item-attack"><img class="icon" src="systems/ffd20lnrw/icons/actions/gladius.svg"></a>
              {{/if}}
              {{/unless}}
            </div>
          </div>
          {{/if}}
          
          {{#if section.showValue}}
          <div class="item-detail item-value">
            <span>{{item.price}} {{localize "ffd20lnrw.CurrencyGP"}}</span>
          </div>
          {{/if}}

          <div class="item-detail item-weight">
            {{#if item.totalWeight}}
            <span>
              {{ item.totalWeight }} {{ item.units }}
            </span>
            {{/if}}
          </div>

          {{#if ../../isGM}}
          <div class="item-detail item-identified">
            <a class="item-control item-identify"><span>{{{item.labels.identified}}}</span></a>
          </div>
          {{/if}}

          <div class="item-detail item-uses flexrow {{#if item.isCharged}}tooltip{{/if}}">
            {{#if item.isCharged}}
            <input type="text" class="select-on-click" data-wheel-step="1" value="{{item.data.uses.value}}" data-dtype="Number"/>
            <span class="sep"> / </span>
            <input type="text" value="{{item.data.uses.max}}" disabled data-dtype="Number"/>
            <span class="tooltipcontent">
              @resources.{{item.tag}}.value : {{item.data.uses.value}}<br>
              @resources.{{item.tag}}.max : {{item.data.uses.max}}
            </span>
            {{/if}}
          </div>

          {{#if ../../owner}}
          <div class="item-controls">
            <a class="item-control item-quantity-add"><i class="fas fa-plus"></i></a>
            <a class="item-control item-quantity-subtract"><i class="fas fa-minus"></i></a>
            <a class="item-control item-edit" title="{{localize "ffd20lnrw.EditItem"}}"><i class="fas fa-edit"></i></a>
            <a class="item-control item-duplicate" title="{{localize "ffd20lnrw.DuplicateItem"}}"><i class="fas fa-copy"></i></a>
            {{#if ../../owned}}<a class="item-control item-take" title="{{localize "ffd20lnrw.ItemContainerTakeContents"}}"><i class="fas fa-arrow-alt-circle-down"></i></a>{{/if}}
            <a class="item-control item-delete" title="{{localize "ffd20lnrw.DeleteItem"}}"><i class="fas fa-trash"></i></a>
          </div>
          {{/if}}
        </li>
        {{/each}}
      </ol>
    </ol>
  </div>
  {{/each}}
</section>
