{{!-- Template Type --}}
<div class="form-group select">
  <label>{{localize "PF1.TemplateType"}}</label>
  <select name="data.measureTemplate.type">
    {{#select data.measureTemplate.type}}
    <option value="">{{localize "PF1.None"}}</option>
    {{#each config.measureTemplateTypes as |name type|}}
    <option value="{{type}}">{{name}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>

{{#if data.measureTemplate.type}}
{{!-- Template Size --}}
<div class="form-group">
  <label>{{localize "PF1.Size"}}</label>
  <div class="form-fields">
    <input type="text" name="data.measureTemplate.size" value="{{data.measureTemplate.size}}" placeholder="{{localize "PF1.Formula"}}" />
  </div>
</div>

{{!-- Override Color --}}
<div class="form-group stacked">
  <label class="checkbox">
    <input type="checkbox" name="data.measureTemplate.overrideColor" {{checked data.measureTemplate.overrideColor}}/> {{localize "PF1.OverrideColor"}}
  </label>
  <label class="checkbox">
    <input type="checkbox" name="data.measureTemplate.overrideTexture" {{checked data.measureTemplate.overrideTexture}}/> {{localize "PF1.OverrideTexture"}}
  </label>
</div>

{{#if data.measureTemplate.overrideColor}}
<div class="form-group">
  <label>{{localize "PF1.CustomColor"}}</label>
  <div class="form-fields">
    <input class="color" type="text" name="data.measureTemplate.customColor" value="{{data.measureTemplate.customColor}}" />
    <input type="color" value="{{data.measureTemplate.customColor}}" data-edit="data.measureTemplate.customColor" />
  </div>
</div>
{{/if}}

{{#if data.measureTemplate.overrideTexture}}
<div class="form-group">
  <label>{{localize "PF1.CustomTexture"}}</label>
  <div class="form-fields">
    {{!-- {{filePicker target="data.measureTemplate.customTexture" type="imagevideo"}} --}}
    <input class="image" type="text" name="data.measureTemplate.customTexture" placeholder="path/image.png" value="{{data.measureTemplate.customTexture}}"/>
    <button type="button" class="file-picker-alt" data-for="data.measureTemplate.customTexture" data-type="imagevideo">
      <i class="fas fa-file-import fa-fw"></i>
    </button>
  </div>
</div>
{{/if}}
{{/if}}
