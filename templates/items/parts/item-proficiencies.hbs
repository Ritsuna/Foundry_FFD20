<div class="form-group {{system.armorProf.cssClass}}">
  <label for="system.weaponProf">{{localize "FFD20.TraitWeaponProf"}}</label>
  <ul class="traits-list tag-list">
    {{#each system.weaponProf.selected as |v k|}}
      <li class="tag {{k}}">{{v}}</li>
    {{/each}}
  </ul>
  <a class="trait-selector" for="system.weaponProf" data-options="weaponProficiencies"><i class="fas fa-edit"></i></a>
</div>

