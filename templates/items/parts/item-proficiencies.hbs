<h4 class="form-header">{{localize "FFD20.ProficienciesGranted"}}</h4>

<div class="form-group weapon-proficiencies">
  <label for="system.weaponProf">{{localize "FFD20.TraitWeaponProf"}}</label>
  <ul class="traits-list tag-list">
    {{#each weaponProf.selected as |v k|}}
      <li class="tag {{k}}">{{v}}</li>
    {{/each}}
  </ul>
  <a class="trait-selector" data-options="weaponProficiencies"><i class="fas fa-edit"></i></a>
</div>

