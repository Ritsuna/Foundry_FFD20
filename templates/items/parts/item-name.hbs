<div class='flexcol'>
<h3 class="charname">
	<input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'ffd20lnrw.ItemName'}}" />
</h3>
<!-- <div class="flex-break"></div>-->
<h3 class="charname">
	<input name="data.unidentified.name" type="text" value="{{data.unidentified.name}}"
		placeholder="{{localize 'ffd20lnrw.UnidentifiedName'}}" />
</h3>
</div>
{{else}}
{{#if showUnidentifiedData}}
<h1 class="charname">
	<input name="data.unidentified.name" type="text" value="{{itemName}}" placeholder="{{localize 'ffd20lnrw.ItemName'}}" />
</h1>
{{else}}
<h1 class="charname">
	<input name="name" type="text" value="{{itemName}}" placeholder="{{localize 'ffd20lnrw.ItemName'}}" />
</h1>
{{/if}}
{{/if}}

<div class="item-subtitle">
	<h4 class="item-type">{{localize "ffd20lnrw.Item"}}</h4>
