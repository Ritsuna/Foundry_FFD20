{{#unless showUnidentifiedData}}
<h4 class="form-header">{{localize "FFD20.Advanced"}}</h4>

<div class="form-group">
  <label>{{localize "FFD20.Tag"}}</label>
  <input {{#unless system.useCustomTag}}disabled{{/unless}} type="text" name="system.tag" value="{{ system.tag }}"
  placeholder="{{localize "FFD20.Tag"}}" />
  <label>{{localize "FFD20.Custom"}}</label>
  <input type="checkbox" name="system.useCustomTag" {{checked system.useCustomTag}} />
</div>
{{/unless}}