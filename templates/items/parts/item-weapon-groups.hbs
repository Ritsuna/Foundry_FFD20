<div class="form-group weapon-groups">
  <label>{{localize "FFD20.WeaponGroups"}}</label>
  <div class="form-fields">
    <ul class="traits-list tag-list">
      {{#each weaponGroups.selected as |v k|}}
        <li class="tag {{k}}">{{v}}</li>
      {{/each}}
    </ul>
    <a class="trait-selector" data-title="FFD20.WeaponGroups" data-for="system.weaponGroups" data-options="weaponGroups"><i class="fa-solid fa-edit" inert></i></a>
  </div>
</div>
