{{!-- Tags --}}
<div class="flexcol">
    <div class="flags">
        <h3 class="form-header">
            <a class="help-browser" data-url="Help/Items/Flags"><i class="fa-solid fa-info-circle" inert></i></a>
            {{localize "FFD20.Flags"}}
        </h3>

        {{!-- Boolean Flags --}}
        <div class="form-group">
            <div class="form-fields boolean-flags">
                <div class="data-selector">
                    <a class="entry-selector" data-for="system.flags.boolean" data-flag="true" data-boolean="true" data-fields="FFD20.Name" data-dtypes="String" data-title="FFD20.FlagsBoolean"><i class="fa-solid fa-edit" inert></i></a>
                    <label>{{localize "FFD20.FlagsBoolean"}}</label>
                </div>

                <div class="tag-list flexrow">
                    {{#each flags.boolean as |value key|}}
                    <span class="tag" data-tootip="">{{key}}</span>
                    {{/each}}
                </div>
            </div>
        </div>

        {{!-- Dictionary Flags --}}
        <div class="form-group">
            <div class="form-fields dictionary-flags">
                <div class="data-selector">
                    <a class="entry-selector" data-for="system.flags.dictionary" data-flag="true" data-fields="FFD20.Name;FFD20.Value" data-dtypes="String;String" data-title="FFD20.FlagsDictionary"><i class="fa-solid fa-edit" inert></i></a>
                    <label>{{localize "FFD20.FlagsDictionary"}}</label>
                </div>
            </div>

            {{#if flags.dictionary}}
            <table>
                <thead>
                    <tr>
                        <th>{{localize "FFD20.Name"}}</th>
                        <th>{{localize "FFD20.Value"}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each flags.dictionary as |value key|}}
                    <tr data-tooltip="@dFlags.{{@root.system.tag}}.{{key}}">
                        <td>{{key}}</td>
                        <td>{{value}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>
    </div>

    {{!-- Script Calls --}}
    {{#if scriptCalls}}
    <div class="script-calls">
        <h3 class="form-header">
            <a class="help-browser" data-url="Help/Items/Script-Calls"><i class="fa-solid fa-info-circle" inert></i></a>
            {{localize "FFD20.ScriptCalls.Name"}}
        </h3>

        {{#each scriptCalls}}
        <ol class="item-list" {{#each dataset as |value|}}data-{{@key}}="{{value}}"{{/each}}>
            <li class="item-list-header flexrow">
                <div class="item-name">
                    {{#if tooltip}}
                    <i class="fa-solid fa-info fa-fw item-info" data-tooltip="{{tooltip}}"></i>
                    {{/if}}
                    <h3>{{name}}</h3>
                </div>

                {{#if @root.isGM}}
                <div class="item-detail item-hidden">
                    <i class="fa-solid fa-eye-slash" data-tooltip="FFD20.Hidden"></i>
                </div>
                {{/if}}

                <div class="item-controls">
                  {{#if @root.owner}}
                  <a class="item-control item-create" data-tooltip="FFD20.ScriptCalls.Create">
                      <i class="fa-solid fa-plus" inert></i>
                  </a>
                  {{/if}}
                </div>
            </li>

            <ol class="item-list">
                {{#each items}}
                <li class="item flexrow" data-item-id="{{id}}">
                    <div class="item-name">
                        <div class="item-image no-hover" style='background-image: url("{{img}}")'></div>
                        <h4>{{name}}</h4>
                    </div>

                    {{#if @root.isGM}}
                    <div class="item-detail item-hidden">
                        <a class="item-control item-hide">
                        <span class='hidden-icon'>
                          <i class="fa-solid {{#if hidden}}fa-check is-visible{{else}}fa-times is-hidden{{/if}} fa-fw" inert></i>
                        </span>
                        </a>
                    </div>
                    {{/if}}

                    <div class="item-controls">
                        <a class="item-control item-edit" data-tooltip="FFD20.EditItem"><i class="fa-solid fa-edit" inert></i></a>
                        {{#if @root.owner}}
                        <a class="item-control item-delete" data-tooltip="FFD20.DeleteItem"><i class="fa-solid fa-trash" inert></i></a>
                        {{/if}}
                    </div>
                </li>
                {{/each}}
            </ol>
        </ol>
        {{/each}}
    </div>
    {{/if}}
</div>
