{{#if @root.canUseAmmo}}
{{!-- Ammunition Type --}}
<div class="form-group">
  <label>{{localize "FFD20.AmmunitionType"}}</label>
  <div class="form-fields">
    <select name="system.ammo.type">
      <option value="">{{localize "FFD20.None"}}</option>
      {{selectOptions @root.config.ammoTypes selected=@root.system.ammo.type}}
    </select>
  </div>
</div>

{{!-- Default Ammunition --}}
{{#if @root.system.ammo.type}}
<div class="form-group ammunition">
  <label>{{localize "FFD20.DefaultAmmo"}}</label>
  <div class="form-fields item-link{{#if @root.invalidDefaultAmmo}} wrong-type{{/if}}" data-item-id="{{@root.defaultAmmo.id}}">
    {{#if @root.defaultAmmo}}
    <img class="image" src="{{@root.defaultAmmo.img}}" width="24" height="24">
    {{/if}}
    <label class="item-name">{{@root.defaultAmmo.name}}</label>
    {{#if @root.invalidDefaultAmmo}}
    <i class="fa-solid fa-triangle-exclamation" data-tooltip="FFD20.InvalidAmmoType"></i>
    {{/if}}
    <a class="item-selector" data-type="loot" data-sub-type="ammo" data-kind="{{@root.system.ammo.type}}"
      data-name="system.ammo.default" data-selected="{{@root.defaultAmmo.id}}" data-empty=true data-label="FFD20.Ammunition">
      <i class="fa-solid fa-edit" inert></i>
    </a>
  </div>
</div>

<div class="form-group capacity nonfunctional">
  <label>{{localize "FFD20.Capacity"}}</label>
  <div class="form-fields">
    <input type="number" min="0" step="1" name="system.ammo.capacity" value="{{system.ammo.capacity}}" placeholder="0">
  </div>
</div>

<div class="form-group misfire">
  <label>{{localize "FFD20.Misfire"}}</label>
  <div class="form-fields">
    <input type="number" min="1" step="1" max="20" name="system.ammo.misfire" value="{{system.ammo.misfire}}" placeholder="{{localize "FFD20.None"}}">
    <label>{{localize "FFD20.Radius"}}</label>
    <input type="number" class="misfire-radius" min="0" step="0.5" name="system.ammo.explode" value="{{system.ammo.explode}}" placeholder="0">
    <label>{{localize "FFD20.Distance.ftShort"}}</label>
  </div>
</div>
{{/if}}
{{/if}}
