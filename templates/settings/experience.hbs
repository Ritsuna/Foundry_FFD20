<form autocomplete="off">
  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" name="disableExperienceTracking" {{checked settings.disableExperienceTracking}} /> {{localize "SETTINGS.pf1NoExpN"}}
    </label>
  </div>

  <div class="form-group">
    <label>{{localize "SETTINGS.pf1ExpRateN"}}</label>
    <select name="track">
      {{#select settings.track}}
      <option value="slow">{{localize "PF1.XPTrackSlow"}}</option>
      <option value="medium">{{localize "PF1.XPTrackMedium"}}</option>
      <option value="fast">{{localize "PF1.XPTrackFast"}}</option>
      <option value="customFormula">{{localize "PF1.XPTrackCustomFormula"}}</option>
      {{/select}}
    </select>
  </div>

  {{#if hasCustomFormula}}
  <div class="form-group">
    <input type="text" placeholder="{{localize "PF1.XPTrackCustomFormulaHint"}}" name="custom.formula" value="{{settings.custom.formula}}" />
  </div>
  {{/if}}

  <div class="form-group">
    <button type="submit" name="submit" >
      <i class="far fa-save"></i> {{localize "SETTINGS.Save"}}
    </button>
  </div>
</form>
