<form autocomplete="off">
  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" name="disableExperienceTracking" {{checked settings.disableExperienceTracking}} /> {{localize "SETTINGS.FFD20NoExpN"}}
    </label>
  </div>

  <div class="form-group">
    <label>{{localize "SETTINGS.FFD20ExpRateN"}}</label>
    <select name="track">
      {{#select settings.track}}
      <option value="slow">{{localize "FFD20.XPTrackSlow"}}</option>
      <option value="medium">{{localize "FFD20.XPTrackMedium"}}</option>
      <option value="fast">{{localize "FFD20.XPTrackFast"}}</option>
      <option value="customFormula">{{localize "FFD20.XPTrackCustomFormula"}}</option>
      {{/select}}
    </select>
  </div>

  {{#if hasCustomFormula}}
  <div class="form-group">
    <input type="text" placeholder="{{localize "FFD20.XPTrackCustomFormulaHint"}}" name="custom.formula" value="{{settings.custom.formula}}" />
  </div>
  {{/if}}

  <div class="form-group">
    <button type="submit" name="submit" >
      <i class="far fa-save"></i> {{localize "SETTINGS.Save"}}
    </button>
  </div>
</form>
