<form autocomplete="off">
  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" name="disableExperienceTracking" {{checked settings.disableExperienceTracking}} /> {{localize "SETTINGS.ffd20lnrwNoExpN"}}
    </label>
  </div>

  <div class="form-group">
    <label>{{localize "SETTINGS.ffd20lnrwExpRateN"}}</label>
    <select name="track">
      {{#select settings.track}}
      <option value="slow">{{localize "ffd20lnrw.XPTrackSlow"}}</option>
      <option value="medium">{{localize "ffd20lnrw.XPTrackMedium"}}</option>
      <option value="fast">{{localize "ffd20lnrw.XPTrackFast"}}</option>
      <option value="customFormula">{{localize "ffd20lnrw.XPTrackCustomFormula"}}</option>
      {{/select}}
    </select>
  </div>

  {{#if hasCustomFormula}}
  <div class="form-group">
    <input type="text" placeholder="{{localize "ffd20lnrw.XPTrackCustomFormulaHint"}}" name="custom.formula" value="{{settings.custom.formula}}" />
  </div>
  {{/if}}

  <div class="form-group">
    <button type="submit" name="submit" >
      <i class="far fa-save"></i> {{localize "SETTINGS.Save"}}
    </button>
  </div>
</form>
