<form autocomplete="off">
    {{!-- Disable Tooltips globally --}}
    <div class="form-group">
        <label>{{localize "FFD20.TooltipConfigDisable"}}</label>
        <div class="form-fields">
            <input type="checkbox" name="disable" data-dtype="Boolean" {{checked data.disable}}/>
        </div>
    </div>

    {{!-- Anchor --}}
    <div class="flexrow">
        <label>{{localize "FFD20.TooltipConfigAnchor"}}</label>

        <div class="form-group">
            <label>{{localize "FFD20.Horizontal"}}</label>

            <div class="form-fields">
                <input class="immediate-change" type="range" name="anchor.x" data-dtype="Number" value="{{data.anchor.x}}"
                                                                                                 min="0" max="1" step="0.05"/>
                <span class="range-value">{{data.anchor.x}}</span>
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "FFD20.Vertical"}}</label>

            <div class="form-fields">
                <input class="immediate-change" type="range" name="anchor.y" data-dtype="Number" value="{{data.anchor.y}}"
                                                                                                 min="0" max="1" step="0.05"/>
                <span class="range-value">{{data.anchor.y}}</span>
            </div>
        </div>
    </div>

    {{!-- Offset --}}
    <div class="flexrow">
        <label>{{localize "FFD20.TooltipConfigOffset"}}</label>

        <div class="form-group">
            <label>{{localize "FFD20.Horizontal"}}</label>

            <div class="form-fields">
                <input class="immediate-change" type="range" name="offset.x" data-dtype="Number" value="{{data.offset.x}}"
                                                                                                 min="-100" max="100" step="1"/>
                <span class="range-value">{{data.offset.x}}</span>
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "FFD20.Vertical"}}</label>

            <div class="form-fields">
                <input class="immediate-change" type="range" name="offset.y" data-dtype="Number" value="{{data.offset.y}}"
                                                                                                 min="-100" max="100" step="1"/>
                <span class="range-value">{{data.offset.y}}</span>
            </div>
        </div>
    </div>

    {{!-- Other Positioning Settings --}}
    <div class="form-group">
        <label>{{localize "FFD20.OnMouse"}}</label>
        <div class="form-fields">
            <input type="checkbox" name="onMouse" data-dtype="Boolean" {{checked data.onMouse}}/>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "FFD20.TooltipConfigHidePortraits"}}</label>
        <div class="form-fields">
            <input type="checkbox" name="portrait.hide" data-dtype="Boolean" {{checked data.portrait.hide}}/>
        </div>
    </div>

    {{!-- Portrait Settings --}}
    <div class="form-group">
        <label>{{localize "FFD20.TooltipConfigMaxPortraitSize"}}</label>

        <div class="form-group">
            <label>{{localize "FFD20.Horizontal"}}</label>

            <div class="form-fields">
                <input class="immediate-change" type="range" name="portrait.maxSize.width" data-dtype="Number" value="{{data.portrait.maxSize.width}}"
                                                                                                 min="64" max="720" step="1"/>
                <span class="range-value">{{data.portrait.maxSize.width}}</span>
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "FFD20.Vertical"}}</label>

            <div class="form-fields">
                <input class="immediate-change" type="range" name="portrait.maxSize.height" data-dtype="Number" value="{{data.portrait.maxSize.height}}"
                                                                                                 min="64" max="720" step="1"/>
                <span class="range-value">{{data.portrait.maxSize.height}}</span>
            </div>
        </div>
    </div>

    {{!-- Hide without key press --}}
    <div class="form-group">
        <label>{{localize "FFD20.TooltipConfigHideWithoutKey" key=hideKey}}</label>

        <div class="form-fields">
            <input type="checkbox" name="hideWithoutKey" data-dtype="Boolean" {{checked data.hideWithoutKey}}/>
        </div>
    </div>

    <button class="world-settings" type="button">
        <span class="fas fa-window-maximize"></span> {{localize "FFD20.TooltipWorldConfigLabel"}}
    </button>

    <div class="form-group">
        <button type="button" name="reset">
            <i class="fas fa-undo"></i> {{localize 'SETTINGS.Reset'}}
        </button>
        <button type="submit" name="submit" >
            <i class="far fa-save"></i> {{localize 'SETTINGS.Save'}}
        </button>
    </div>
</form>
