<form autocomplete="off">
  <nav class="sheet-tabs tabs">
    <a class="item" data-tab="base"><i class="fas fa-heartbeat"></i> {{localize "SETTINGS.FFD20HealthConfigTabBase"}}</a>
    <a class="item" data-tab="variants"><i class="fas fa-prescription-bottle-alt"></i> {{localize "SETTINGS.FFD20HealthConfigTabVariant"}}</a>
  </nav>

  <div class="tabbed">
  <!-- Base Tab -->
    <section class="tab" data-tab="base">
      <p class="notes">{{localize 'SETTINGS.FFD20HealthConfigInstructions'}}</p>
      <div id="hitdice">
        <label class="index table-header">{{localize 'FFD20.HitDie'}}</label>
        {{#each hitdieOptions}}
          <label class="table-header">{{this}}</label>
        {{/each}}

        {{#each hitdice as |opt hd|}}
          <label class="index">{{hd}}</label>
          <div class="switch">
            <input class="switch-check" type="checkbox" {{#if opt.auto}}checked{{/if}} name="hitdice.{{hd}}.auto" id="hitdice.{{hd}}.auto">
            <label class="switch-label" for="hitdice.{{hd}}.auto">
              <span class="switch-auto">{{localize 'SETTINGS.FFD20HealthComputeAuto'}}</span>
              <span class="switch-manual">{{localize 'SETTINGS.FFD20HealthComputeManual'}}</span>
            </label>
          </div>
          <span><input type="text" data-dtype="Number" name="hitdice.{{hd}}.rate" value="{{opt.rate}}"></span>
          <span><input type="text" data-dtype="Number" name="hitdice.{{hd}}.maximized" value="{{opt.maximized}}"></span>
        {{/each}}
        </ul>
      </div>

      <div class="form-group">
        <label>{{localize 'SETTINGS.FFD20HealthRoundingName'}}</label>
        <select name="rounding">
          {{#select rounding}}
            <option value="up">&uarr;</option>
            <option value="nearest">&#8597;</option>
            <option value="down">&darr;</option>
          {{/select}}
        </select>
        <p class="notes">{{localize 'SETTINGS.FFD20HealthRoundingHint'}}</p>
      </div>

      <div class="form-group">
        <label>{{localize 'SETTINGS.FFD20HealthContinuityName'}}</label>
        <select name="continuity">
          {{#select continuity}}
            <option value="continuous">{{localize 'SETTINGS.FFD20HealthContinuityContinuous'}}</option>
            <option value="discrete">{{localize 'SETTINGS.FFD20HealthContinuityDiscrete'}}</option>
          {{/select}}
        </select>
        <p class="notes">{{localize 'SETTINGS.FFD20HealthContinuityHint'}}</p>
      </div>
    </section>

    <!-- Variants Tab -->
    <section class="tab" data-tab="variants">
      <!-- Wounds & Vigor -->
      <div class="form-group">
        <label>{{localize 'SETTINGS.FFD20HealthConfigWoundsAndVigorPCName'}}</label>
        <input type="checkbox" {{#if variants.pc.useWoundsAndVigor}}checked{{/if}} name="variants.pc.useWoundsAndVigor">
        <p class="notes">{{localize 'SETTINGS.FFD20HealthConfigWoundsAndVigorPCHint'}}</p>
      </div>

      <div class="form-group">
        <label>{{localize 'SETTINGS.FFD20HealthConfigWoundsAndVigorNPCName'}}</label>
        <input type="checkbox" {{#if variants.npc.useWoundsAndVigor}}checked{{/if}} name="variants.npc.useWoundsAndVigor">
        <p class="notes">{{localize 'SETTINGS.FFD20HealthConfigWoundsAndVigorNPCHint'}}</p>
      </div>

      <!-- Wound Thresholds -->
      <div class="form-group">
        <label>{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdsPCName'}}</label>
        <select data-dtype="Number" name="variants.pc.useWoundThresholds">
        {{#select variants.pc.useWoundThresholds}}
            <option value="0">{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdDisabled'}}</option>
            <option value="1">{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdNormal'}}</option>
            <option value="2">{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdGritty'}}</option>
        {{/select}}
        </select>
        <p class="notes">{{localize 'SETTINGS.FFD20HealthConfigWoundsThresholdsPCHint'}}</p>
      </div>

      <div class="form-group">
        <label>{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdsNPCName'}}</label>
        <select data-dtype="Number" name="variants.npc.useWoundThresholds">
        {{#select variants.npc.useWoundThresholds}}
            <option value="0">{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdDisabled'}}</option>
            <option value="1">{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdNormal'}}</option>
            <option value="2">{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdGritty'}}</option>
        {{/select}}
        </select>
        <p class="notes">{{localize 'SETTINGS.FFD20HealthConfigWoundsThresholdsNPCHint'}}</p>
      </div>

      <div class="form-group">
        <label>{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdsPCOverrideName'}}</label>
        <input data-dtype="Boolean" type="checkbox" {{#if variants.pc.allowWoundThresholdOverride}}checked{{/if}} name="variants.pc.allowWoundThresholdOverride">
        <p class="notes">{{localize 'SETTINGS.FFD20HealthConfigWoundThresholdsPCOverrideHint'}}</p>
      </div>
    </section>
  </div>

  <div class="form-group">
    <button type="button" name="reset">
      <i class="fas fa-undo"></i> {{localize 'SETTINGS.Reset'}}
    </button>
    <button type="submit" name="submit" >
      <i class="far fa-save"></i> {{localize 'SETTINGS.Save'}}
    </button>
  </div>
</form>
