<form>
  {{#if hasAttack}}
  <div class="form-group">
      <label>{{localize "FFD20.AttackRollDice"}}</label>
      <input type="text" name="d20" value="{{data.d20}}" placeholder="e.g. 2d20kl"/>
  </div>
  <div class="form-group">
    <label>{{localize "FFD20.AttackRollBonus"}}</label>
    <input type="text" name="attack-bonus" value="" placeholder="e.g. +1d4"/>
  </div>
  {{/if}}
  {{#if hasDamage}}
  <div class="form-group">
    <label>{{localize "FFD20.DamageBonus"}}</label>
    <input type="text" name="damage-bonus" value="" placeholder="e.g. +1d4"/>
  </div>
  {{/if}}

  {{!-- Flags --}}
  {{#if (or hasAttack hasDamage)}}
  <div class="form-group stacked">
    <label>{{localize "FFD20.Misc"}}</label>
    <label class="checkbox">
      <input type="checkbox" name="haste-attack"/> {{localize "FFD20.Haste"}}
    </label>
    {{#if isMeleeWeaponAttackAction}}
    <label class="checkbox">
      <input type="checkbox" name="power-attack"/> {{localize "FFD20.PowerAttack"}}
    </label>
    {{/if}}
    {{#if isRangedWeaponAttackAction}}
    <label class="checkbox">
      <input type="checkbox" name="power-attack"/> {{localize "FFD20.DeadlyAim"}}
    </label>
    <label class="checkbox">
      <input type="checkbox" name="manyshot"/> {{localize "FFD20.Manyshot"}}
    </label>
    <label class="checkbox">
      <input type="checkbox" name="rapid-shot"/> {{localize "FFD20.RapidShot"}}
    </label>
    <label class="checkbox">
      <input type="checkbox" name="point-blank-shot"/> {{localize "FFD20.PointBlankShot"}}
    </label>
    {{/if}}
    {{#if isNaturalAttack}}
    <label class="checkbox">
      <input type="checkbox" {{checked item.primaryAttack}} name="primary-attack"/> {{localize "FFD20.PrimaryAttack"}}
    </label>
    {{/if}}
  </div>
  {{/if}}

  {{!-- Conditionals --}}
  {{#if item.conditionals}}
  <div class="form-group stacked">
    <label>{{localize "FFD20.Conditionals"}}</label>
    {{#each item.conditionals as |conditional a|}}
    <label class="checkbox">
      <input type="checkbox" name="conditional.{{a}}" class="conditional" {{checked this.default}}> {{lookup this "name"}}
    </label>
    {{/each}}
  </div>
  {{/if}}

  {{#if hasDamage}}{{#if hasDamageAbility}}
  <div class="form-group select">
    <label>{{localize "FFD20.DamageAbility"}}</label>
    <select name="damage-ability-multiplier">
      {{#select data.item.ability.damageMult}}
      <option value="0.5">x0.5</option>
      <option value="1">x1</option>
      <option value="1.5">x1.5</option>
      <option value="2">x2</option>
      <option value="2.5">x2.5</option>
      {{/select}}
    </select>
  </div>
  {{/if}}{{/if}}

  {{#if isAttack}}
  {{#unless isNaturalAttack}}
  <div class="form-group select">
    <label>{{localize "FFD20.Held"}}</label>
    <select name="held">
      {{#select data.item.held}}
      {{#each config.weaponHoldTypes as |name type|}}
      <option value="{{type}}">{{name}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>
  {{/unless}}
  {{/if}}

  {{#if isSpell}}
  <div class="form-group">
    <label>{{localize "FFD20.CasterLevelOffset"}}</label>
    <input type="number" data-dtype="Number" value="0" name="cl-offset" />
  </div>

  <div class="form-group">
    <label>{{localize "FFD20.SpellLevelOffset"}}</label>
    <input type="number" data-dtype="Number" value="0" name="sl-offset" />
  </div>

  <div class="form-group">
    <label>{{localize "FFD20.ConcentrationCheck"}}</label>
    <input type="checkbox" data-dtype="Boolean" name="concentration">
  </div>

  <div class="form-group">
    <label>{{localize "FFD20.CasterLevelCheck"}}</label>
    <input type="checkbox" data-dtype="Boolean" name="cl-check" {{checked item.clCheck}}>
  </div>
  {{/if}}

  <div class="form-group stacked">
    {{#if hasTemplate}}
    <label class="checkbox">
      <input type="checkbox" name="measure-template" checked/> {{localize "FFD20.MeasureTemplate"}}
    </label>
    {{/if}}
  </div>

  <div class="form-group">
    <label>{{localize "FFD20.RollMode"}}</label>
    <select name="rollMode">
      {{#select rollMode}}
      {{#each rollModes as |label mode|}}
      <option value="{{mode}}">{{localize label}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>
</form>
