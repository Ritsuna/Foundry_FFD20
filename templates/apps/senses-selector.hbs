<section class="form-body {{cssClass}}" data-tooltip-class="pf1-v2">
  {{#if noSystemVision}}
  <p class="warning">
    <i class="fa-solid fa-triangle-exclamation" inert></i>
    {{localize "FFD20.CustomVisionRules.Warning"}}
  </p>
  {{/if}}
  {{!-- Low Light vision --}}
  <div class="form-group">
    <label for="senses-ll-enabled-{{actor.id}}">{{localize "TOKEN.VisionLowLight"}}</label>
    <div class="form-fields">
      <input id="senses-ll-enabled-{{actor.id}}" type="checkbox" name="system.traits.senses.ll.enabled" {{checked senses.ll.enabled}}>
    </div>
  </div>

  {{!-- Low Light vision multiplier --}}
  <div class="form-group slim">
    <label>{{localize "TOKEN.VisionLowLightMultiplier"}}</label>
    <div class="form-fields">
      <label for="senses-ll-multiplier-dim-{{actor.id}}" class="header">{{localize "LIGHT.FIELDS.dim.label"}}</label>
      <input id="senses-ll-multiplier-dim-{{actor.id}}" type="number" name="system.traits.senses.ll.multiplier.dim" value="{{senses.ll.multiplier.dim}}" min="0" placeholder="2">
      <label for="senses-ll-multiplier-bright-{{actor.id}}" class="header">{{localize "LIGHT.FIELDS.bright.label"}}</label>
      <input id="senses-ll-multiplier-bright-{{actor.id}}" type="number" name="system.traits.senses.ll.multiplier.bright" value="{{senses.ll.multiplier.bright}}" min="0" placeholder="2">
    </div>
  </div>

  {{!-- Darkvision --}}
  <div class="form-group">
    <label for="senses-darkvision-{{actor.id}}">{{localize "FFD20.Sense.darkvision"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input id="senses-darkvision-{{actor.id}}" type="number" min="0" step="{{#if isMetric}}1.5{{else}}5{{/if}}" name="system.traits.senses.dv.value" value="{{senses.dv.value}}" placeholder="0">
    </div>
  </div>

  {{!-- Tremorsense --}}
  <div class="form-group">
    <label for="senses-tremorsense-{{actor.id}}">{{localize "FFD20.Sense.tremorsense"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input id="senses-tremorsense-{{actor.id}}" type="number" min="0" step="{{#if isMetric}}1.5{{else}}5{{/if}}" name="system.traits.senses.ts.value" value="{{senses.ts.value}}"  placeholder="0">
    </div>
  </div>

  {{!-- Blindsense --}}
  <div class="form-group">
    <label for="senses-blindsense-{{actor.id}}">{{localize "FFD20.Sense.blindsense"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input id="senses-blindsense-{{actor.id}}" type="number" min="0" step="{{#if isMetric}}1.5{{else}}5{{/if}}" name="system.traits.senses.bse.value" value="{{senses.bse.value}}" placeholder="0">
    </div>
  </div>

  {{!-- Blindsight --}}
  <div class="form-group">
    <label for="senses-blindsight-{{actor.id}}">{{localize "FFD20.Sense.blindsight"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input id="senses-blindsight-{{actor.id}}" type="number" min="0" step="{{#if isMetric}}1.5{{else}}5{{/if}}" name="system.traits.senses.bs.value" value="{{senses.bs.value}}" placeholder="0">
    </div>
  </div>

  {{!-- Scent --}}
  <div class="form-group">
    <label for="senses-scent-{{actor.id}}">{{localize "FFD20.Sense.scent"}}* <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input id="senses-scent-{{actor.id}}" type="number" min="0" step="{{#if isMetric}}1.5{{else}}5{{/if}}" name="system.traits.senses.sc.value" value="{{senses.sc.value}}" placeholder="0">
    </div>
  </div>

  {{!-- See invisibility --}}
  <div class="form-group">
    <label for="senses-see-invis-{{actor.id}}">{{localize "FFD20.Sense.seeInvis"}}</label>
    <div class="form-fields">
      <input id="senses-see-invis-{{actor.id}}" type="checkbox" name="system.traits.senses.si" {{checked senses.si}}>
    </div>
  </div>

  {{!-- True seeing --}}
  <div class="form-group">
    <label for="senses-trueseeing-{{actor.id}}">{{localize "FFD20.Sense.trueseeing"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input id="senses-trueseeing-{{actor.id}}" type="number" min="0" step="{{#if isMetric}}1.5{{else}}5{{/if}}" name="system.traits.senses.tr.value" value="{{senses.tr.value}}" placeholder="0">
    </div>
  </div>

  {{!-- See in darkness --}}
  <div class="form-group">
    <label for="senses-see-in-dark-{{actor.id}}">{{localize "FFD20.Sense.seeInDark"}}*</label>
    <div class="form-fields">
      <input id="senses-see-in-dark-{{actor.id}}" type="checkbox" name="system.traits.senses.sid" {{checked senses.sid}}>
    </div>
  </div>

  {{!-- Lifesense --}}
  <div class="form-group">
    <label for="senses-lifesense-{{actor.id}}">{{localize "FFD20.Sense.lifesense"}} <span class="units">({{gridUnits}})</span></label>
    <div class="form-fields">
      <input id="senses-lifesense-{{actor.id}}" type="number" min="0" step="{{#if isMetric}}1.5{{else}}5{{/if}}" name="system.traits.senses.ls.value" value="{{senses.ls.value}}" placeholder="0">
    </div>
  </div>

  {{!-- Custom --}}
  <div class="form-group">
    <label for="senses-custom-{{actor.id}}">{{localize "FFD20.Custom"}}</label>
    <div class="form-fields">
      <input id="senses-custom-{{actor.id}}" type="text" name="system.traits.senses.custom" value="{{senses.custom}}">
    </div>
  </div>

  <p class="hint">* {{localize "FFD20.Info.NotFunctioning"}}</p>
</section>
