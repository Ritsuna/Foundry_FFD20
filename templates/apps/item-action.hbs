<form autocomplete="off" data-tooltip-class="ffd20" class="flexcol {{cssClass}}">
  <header class="sheet-header flexrow">
    <img class="profile" src="{{img}}" data-edit="img">
    <div class="header-details flexrow">
      <h1 class="action-name">
        <input name="name" type="text" value="{{data.name}}" placeholder="{{localize "FFD20.Name"}}">
      </h1>
    </div>
  </header>

  <nav class="sheet-navigation tabs" data-group="primary">
    <a class="item" data-tab="description" data-group="primary">{{localize "FFD20.Description"}}</a>
    <a class="item" data-tab="activation" data-group="primary">{{localize "FFD20.Usage"}}</a>
    <a class="item" data-tab="action" data-group="primary">{{localize "FFD20.Action"}}</a>
    <a class="item" data-tab="misc" data-group="primary">{{localize "FFD20.Misc"}}</a>
    <a class="item" data-tab="conditionals">{{localize "FFD20.Conditionals"}}</a>
  </nav>

  <section class="primary-body">

    {{!-- Action Description --}}
    <div class="tab description" data-group="primary" data-tab="description">
      <div class="form-group">
        <label>{{localize "FFD20.Tag"}}</label>
        <input type="text" placeholder="{{data.tag}}" value="{{@root.tag}}" name="tag">
      </div>
      {{editor descriptionHTML target="description" button=_editorState.description engine="prosemirror" editable=@root.editable}}
      <!--prose-mirror name="description" value="{{data.description}}" {{#if _editorState.description}}toggled{{/if}}>{{{descriptionHTML}}}</prose-mirror-->
    </div>

    {{!-- Action Activation --}}
    <div class="tab activation" data-group="primary" data-tab="activation">
      {{> "systems/ffd20/templates/apps/item-action/activation.hbs"}}
    </div>

    {{!-- Action Effect --}}
    <div class="tab action" data-group="primary" data-tab="action">
      {{> "systems/ffd20/templates/apps/item-action/action.hbs"}}
    </div>

    {{!-- Miscellaneous --}}
    <div class="tab misc" data-group="primary" data-tab="misc">
      <h3 class="form-header">{{localize "FFD20.MeasureTemplate"}}</h3>

      {{> "systems/ffd20/templates/apps/item-action/template.hbs"}}

      <h3 class="form-header">{{localize "FFD20.Misc"}}</h3>

      {{!-- Sound Effect --}}
      <div class="form-group">
        <label>{{localize "FFD20.SoundEffect"}}</label>
        <div class="form-fields">
          {{formInput fields.soundEffect value=data.soundEffect placeholder="path/to/audio.m4a"}}
        </div>
      </div>
    </div>

    {{!-- Conditionals Tab --}}
    <div class="tab condtionals" data-group="primary" data-tab="conditionals">
      {{> "systems/ffd20/templates/apps/item-action/conditionals.hbs"}}
    </div>
  </section>
</form>
