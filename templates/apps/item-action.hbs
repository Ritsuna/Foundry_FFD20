<form autocomplete="off" class="flexcol">
  <header class="sheet-header flexrow">
    <img class="profile" src="{{data.img}}" title="{{data.name}}" data-edit="img">
    <div class="header-details flexrow">
      <h1 class="action-name">
        <input name="name" type="text" value="{{data.name}}" placeholder="{{localize "FFD20.ActionName"}}" />
      </h1>
    </div>
  </header>

  <nav class="sheet-navigation tabs" data-group="primary">
    <a class="item" data-tab="description" data-group="primary">{{localize "FFD20.Description"}}</a>
    <a class="item" data-tab="activation" data-group="primary">{{localize "FFD20.Usage"}}</a>
    <a class="item" data-tab="action" data-group="primary">{{localize "FFD20.Action"}}</a>
    <a class="item" data-tab="misc" data-group="primary">{{localize "FFD20.Misc"}}</a>
    <a class="item" data-tab="conditionals">{{localize "FFD20.Conditionals"}}</a>
  </nav>

  <section class="primary-body">

    {{!-- Action Description --}}
    <div class="tab details" data-group="primary" data-tab="description">
      <div class="form-group">
        <label>{{localize "FFD20.Tag"}}</label>
        <input type="text" placeholder="{{tag}}" value="{{data.tag}}" name="tag" />
      </div>
      {{editor descriptionHTML target="description" button=true owner=owner editable=owner engine="prosemirror" collaborate=false}}
    </div>

    {{!-- Action Activation --}}
    <div class="tab details" data-group="primary" data-tab="activation">
      {{> "systems/ffd20/templates/apps/item-action/activation.hbs"}}
    </div>

    {{!-- Action Effect --}}
    <div class="tab details" data-group="primary" data-tab="action">
      {{> "systems/ffd20/templates/apps/item-action/action.hbs"}}
    </div>

    {{!-- Miscellaneous --}}
    <div class="tab flexcol" data-group="primary" data-tab="misc">
      <h3 class="form-header">{{localize "FFD20.MeasureTemplate"}}</h3>

      {{> "systems/ffd20/templates/apps/item-action/template.hbs"}}

      <h3 class="form-header">{{localize "FFD20.Misc"}}</h3>

      {{!-- Sound Effect --}}
      <div class="form-group">
        <label>{{localize "FFD20.SoundEffect"}}</label>
        <div class="form-fields">
          <input type="text" name="soundEffect" placeholder="path/audio.wav" value="{{data.soundEffect}}"/>
          <button type="button" class="file-picker-alt" data-for="soundEffect" data-type="audio">
            <i class="fas fa-file-import fa-fw"></i>
          </button>
        </div>
      </div>
    </div>

    {{!-- Conditionals Tab --}}
    <div class="tab" data-group="primary" data-tab="conditionals">
      {{> "systems/ffd20/templates/apps/item-action/conditionals.hbs"}}
    </div>
  </section>
</form>
