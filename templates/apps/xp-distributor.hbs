<form autocomplete="off" onsubmit="event.preventDefault();">
  <div class="selectors">
    {{!-- PC selector --}}
    <h2>{{localize "FFD20.PCs"}}</h2>
    <div class="character-selector">
      {{#each combatants.characters as |combatant|}}
        <div class="actor{{#if combatant.toggled}} toggled{{/if}}" data-id="{{combatant.id}}">
          <img class="portrait" src="{{combatant.actorData.img}}">
          <span class="name">{{combatant.actorData.name}}</span>
          <input type="checkbox" {{checked combatant.toggled}}/>
        </div>
      {{/each}}
    </div>

    {{!-- NPC selector --}}
    <h2>{{localize "FFD20.NPCs"}}</h2>
    <div class="npc-selector">
      {{#each combatants.npcs as |combatant|}}
        <div class="actor{{#if combatant.toggled}} toggled{{/if}}" data-id="{{combatant.id}}">
          <img class="portrait" src="{{combatant.actorData.img}}">
          <span class="name">{{combatant.actorData.name}}</span>
          <span class="xp">{{combatant.xpString}} XP</span>
          <input type="checkbox" {{checked combatant.toggled}}/>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="footer">
    {{!-- Options --}}
    <h2>{{localize "FFD20.Options"}}</h2>
    <div class="options flexcol">
      <div class="bonus-xp form-group">
        <label>{{localize "FFD20.Application.XPDistributor.Options.BonusExperience"}}
          <input class="form-fields" type="number" value="{{bonusXP}}" />
        </label>
      </div>
    </div>

    {{!-- Show result --}}
    <div class="flexcol result">
      {{!-- Split XP --}}
      <div class="property xp-split">
        <strong>
          <i class="fas fa-people-arrows"></i> {{localize "FFD20.Application.XPDistributor.SplitExperience"}}
        </strong>
        <strong class="value">{{labels.xp.split}}</strong>
      </div>

      {{!-- Total XP --}}
      <div class="property xp-total">
        <strong>
          <i class="fas fa-star"></i> {{localize "FFD20.Application.XPDistributor.TotalExperience"}}
        </strong>
        <strong class="value">{{labels.xp.total}}</strong>
      </div>
    </div>

    {{!-- Buttons --}}
    <div class="flexrow">
      <button type="button" name="split-evenly">
        <i class="fas fa-people-arrows"></i> {{localize "FFD20.Application.XPDistributor.SplitEvenly"}}
      </button>

      <button type="button" name="give-to-all">
        <i class="fas fa-star"></i> {{localize "FFD20.Application.XPDistributor.GiveToAll"}}
      </button>

      <button type="button" name="cancel">
        {{localize "FFD20.Cancel"}}
      </button>
    </div>
  </div>
</form>
