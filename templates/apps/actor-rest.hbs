<form class="{{cssClass}}" autocomplete="off">
  <div class="flexcol">
    <div class="form-group stacked">
      <label class="checkbox">
        <input type="checkbox" name="restoreHealth" checked/> {{localize "ffd20lnrw.RestoreHealth"}}
      </label>

      <label class="checkbox">
        <input type="checkbox" name="restoreDailyUses" checked/> {{localize "ffd20lnrw.RestoreDailyUses"}}
      </label>

      <label class="checkbox">
        <input type="checkbox" name="longTermCare"/> {{localize "ffd20lnrw.LongTermCare"}}
      </label>
    </div>

    <div class="form-group">
      <label>{{localize "ffd20lnrw.Duration"}}</label>
      <input type="number" data-dtype="Number" name="hours" value="8"/> {{localize "ffd20lnrw.TimeHour"}}
    </div>
  </div>

  <button type="submit" name="submit">
    {{localize "ffd20lnrw.Rest"}}
  </button>
</form>
